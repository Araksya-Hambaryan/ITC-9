<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlide_1"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/imageSize"
        android:layout_height="@dimen/imageSize"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-236dp"
        android:src="@drawable/cookmaster" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/layWidth"
        android:layout_height="@dimen/layHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margBot"
        android:text="@string/this_is_a_kitchen_application_for_companies"
        android:textSize="@dimen/txtSizeSlide1"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margTop2"
        android:text="@string/welcome"
        android:textSize="@dimen/txtWelcome"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        />


</RelativeLayout>